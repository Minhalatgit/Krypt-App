<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?page_default_bg">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="?regularFont"
        android:text="@string/enter_krypt_code"
        android:textColor="?toolbar_text_color"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backIcon" />

    <EditText
        android:id="@+id/kryptCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="@drawable/border_line"
        android:fontFamily="?regularFont"
        android:hint="@string/enter_krypt_code"
        android:imeOptions="flagNoPersonalizedLearning"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:textColor="?text_color_hint"
        android:textColorHint="?text_color_hint"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPasswordTitle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonBg"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_margin="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:cardBackgroundColor="?colorPrimary"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kryptCode" />

    <TextView
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="?regularFont"
        android:text="@string/submit"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="@id/buttonBg"
        app:layout_constraintEnd_toEndOf="@id/buttonBg"
        app:layout_constraintStart_toStartOf="@id/buttonBg"
        app:layout_constraintTop_toTopOf="@id/buttonBg" />

</androidx.constraintlayout.widget.ConstraintLayout>