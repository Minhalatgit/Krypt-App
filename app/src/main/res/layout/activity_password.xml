<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?page_default_bg"
    tools:context=".view.activity.PasswordActivity">


    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:src="@drawable/lock_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:tint="?toolbar_icon_color"
        android:id="@+id/lockIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_height="@dimen/_20sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:fontFamily="?regularFont"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/enter_your_password"
        android:textSize="@dimen/_13sdp"
        android:id="@+id/createPasswordTitle"
        android:textColor="?toolbar_text_color"
        app:layout_constraintTop_toBottomOf="@+id/lockIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/passwordField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:hint="@string/enter_password"
        android:paddingLeft="@dimen/_11sdp"
        android:textColorHint="?text_color_hint"
        android:textSize="@dimen/_9sdp"
        android:inputType="textPassword"
        android:fontFamily="?regularFont"
        app:layout_constraintTop_toBottomOf="@+id/createPasswordTitle"
        android:background="@drawable/border_line"
        android:layout_height="@dimen/_35sdp"
        android:textColor="?text_color_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:paddingStart="@dimen/_10sdp"
        android:imeOptions="flagNoPersonalizedLearning"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/buttonBg"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_32sdp"
        android:onClick="onLoginButtonClicked"
        app:cardBackgroundColor="?colorPrimary"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordField" />


    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@id/buttonBg"
        app:layout_constraintTop_toTopOf="@id/buttonBg"
        app:layout_constraintBottom_toBottomOf="@id/buttonBg"
        android:text="@string/login"
        android:fontFamily="?regularFont"
        android:textSize="@dimen/_10sdp"
        android:onClick="onLoginButtonClicked"
        app:layout_constraintEnd_toEndOf="@id/buttonBg"
        android:textColor="@color/text_color_white"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>