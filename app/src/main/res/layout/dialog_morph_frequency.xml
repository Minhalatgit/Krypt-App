<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?page_default_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/morphLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="?regularFont"
        android:text="Set Morph Frequency"
        android:textColor="?toolbar_text_color"
        android:textSize="@dimen/_16sdp" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/morphLabel"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:isb_indicator_color="@color/text_color_grey"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="3"
        app:isb_min="0.5"
        app:isb_only_thumb_draggable="true"
        app:isb_progress_value_float="true"
        app:isb_seek_smoothly="true"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/colorAccent"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_color="@color/text_color_grey"
        app:isb_tick_texts_color="@color/colorAccent"
        app:isb_ticks_count="12"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/colorAccent" />

</RelativeLayout>