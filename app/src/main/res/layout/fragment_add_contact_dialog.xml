<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addContactRoot"
    android:background="?page_default_bg">

    <ImageButton
        android:id="@+id/backIcon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_clear"
        android:padding="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/createPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="?regularFont"
        android:text="@string/add_contact"
        android:textColor="?toolbar_text_color"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backIcon" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/enterKrypt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="@drawable/border_line"
        android:fontFamily="?regularFont"
        android:hint="@string/enter_krypt_code"
        android:paddingStart="@dimen/_10sdp"
        android:paddingLeft="@dimen/_11sdp"
        android:textColor="?text_color_hint"
        android:textColorHint="?text_color_hint"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPasswordTitle"
        android:imeOptions="flagNoPersonalizedLearning|actionNext"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contactName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="@drawable/border_line"
        android:fontFamily="?regularFont"
        android:hint="@string/enter_contact_name"
        android:paddingStart="@dimen/_10sdp"
        android:paddingLeft="@dimen/_11sdp"
        android:textColor="?text_color_hint"
        android:textColorHint="?text_color_hint"
        android:maxLines="1"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterKrypt"
        android:imeOptions="flagNoPersonalizedLearning|actionDone"/>





    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="?regularFont"
        android:text="@string/submit"
        app:layout_constraintWidth_percent="0.3"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/_10sdp"
        android:gravity="center"
        android:textAllCaps="false"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactName"/>


</androidx.constraintlayout.widget.ConstraintLayout>